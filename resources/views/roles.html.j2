{% extends "base_template.html.j2" %}



{% block title %}Farado â€” Roles{% endblock %}

{% set active_menu = 'roles' %}


{% block styles %}
  <!--
    <link href="/static/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />
  -->
{% endblock %}


{% block breadcrumb %}
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Roles</li>
  </ol>
{% endblock %}


{% block content %}

  <h2 class="page-header">
    Roles
    <a href="/roles/add_role" class="btn btn-sm btn-outline-dark" role="button" aria-pressed="true">+</a>
  </h2>

  <div class="row placeholders">

    <table class="table">
      <thead class="table-dark">
        <tr>
          <th scope="col" style="width: 1%">Id</th>
          <th scope="col">Caption</th>
          <th scope="col" style="width: 1%"></th>
        </tr>
      </thead>
      <tbody>
        {% for role in project_manager.roles() %}
        <tr>
          <th scope="row">{{ role.id }}</th>
          <td>
            <a href="/roles/role?target_role_id={{ role.id }}" title="Modify role">{{ role.caption }}</a>
          </td>
          <td>
            <a href="/roles/remove_role?target_role_id={{ role.id }}" title="Remove role">
              <span class="badge bg-danger">x</span>
            </a>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

  </div>
{% endblock %}



